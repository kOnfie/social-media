{
  "printWidth": 80,
  "tabWidth": 2,
  "semi": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react(/(.*))?$",
    "^next(/(.*)|-(.*))?$",
    "<THIRD_PARTY_MODULES>",
    "^@/(.*)(?<!\\.types|\\.styles)$",
    "^@/.*\\.types$",
    "^@/.*\\.styles$",
    "^[./].*(?<!\\.types|\\.styles)$",
    "^[./].*\\.types$",
    "^[./].*\\.styles$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
